# Whisper, GPT Turbo 3.5 API Key 
OPENAI_API_KEY=your-key-here

# False일때는 gpt 토큰안씀 사용할때는 True로 변경
USE_GPT=False

# 데이터베이스 연결 설정
DATABASE_URL=postgresql://lifebit_user:lifebit_password@localhost:5432/lifebit_db

# 서버 설정
PORT=8001
HOST=0.0.0.0

# CORS 설정 (개발 환경)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# CORS 설정 (프로덕션 환경 - 실제 도메인으로 교체)
CORS_ALLOWED_ORIGINS=http://your-domain.com,https://your-domain.com,http://your-domain.com:80

# 프로덕션 데이터베이스 설정
DB_HOST=postgres-db
DB_PORT=5432
DB_NAME=lifebit_db
DB_USER=lifebit_user
DB_PASSWORD=lifebit_password

# 환경 설정
NODE_ENV=development
SPRING_PROFILES_ACTIVE=development

# 카카오 로그인
KAKAO_REDIRECT_URI=your-key-here

# 구글 로그인
GOOGLE_CLIENT_SECRET=your-key-here
GOOGLE_REDIRECT_URI=your-key-here

# JWT 설정
JWT_SECRET=your-key-here
JWT_ALGORITHM=your-key-here

# 로깅 설정
LOG_LEVEL=info


