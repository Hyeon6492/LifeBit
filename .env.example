# ==========================================
# LifeBit 프로젝트 환경 변수 설정
# ==========================================

# NCP (Naver Cloud Platform) 인증 정보
NCP_ACCESS_KEY=your-ncp-access-key
NCP_SECRET_KEY=your-ncp-secret-key
NCP_REGION=KR
NCP_SITE=public

# 프로젝트 설정
PROJECT_NAME=lifebit
ENVIRONMENT=dev
DOMAIN_NAME=

# Git 저장소 설정
GIT_REPOSITORY_URL=https://github.com/your-username/lifebit.git
GIT_BRANCH=main

# AI API 설정 (FastAPI - Port 8001)
OPENAI_API_KEY=your-openai-api-key-here
USE_GPT=False
FASTAPI_PORT=8001

# OAuth 로그인 설정
KAKAO_REDIRECT_URI=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# 데이터베이스 설정
POSTGRES_DB=lifebit_db
POSTGRES_USER=lifebit_user
POSTGRES_PASSWORD=lifebit_password
POSTGRES_PORT=5432

# 애플리케이션 포트 설정
SPRING_PORT=8080
FRONTEND_PORT=3000
NGINX_PORT=80

# Airflow 설정
AIRFLOW_FERNET_KEY=your-32-character-fernet-key-here
AIRFLOW_SECRET_KEY=your-secret-key-here
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin

# 보안 설정
JWT_SECRET_KEY=your-jwt-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 성능 설정
MAX_UPLOAD_SIZE=100M
WORKER_PROCESSES=auto

# 로깅 설정
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# 모니터링 설정
ENABLE_MONITORING=true
BACKUP_RETENTION_DAYS=7

# SSL 설정 (선택사항)
SSL_CERTIFICATE_PATH=
SSL_PRIVATE_KEY_PATH=

# 알림 설정 (선택사항)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD= 