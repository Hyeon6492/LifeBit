# ====================================================
# LifeBit 프로젝트 환경 변수 설정
# ====================================================
# 이 파일을 .env로 복사한 후 실제 값으로 수정하세요
# cp .env.example .env

# ====================================================
# 기본 프로젝트 설정
# ====================================================
PROJECT_NAME=lifebit
ENVIRONMENT=dev
VERSION=latest
TZ=Asia/Seoul

# ====================================================
# 데이터베이스 설정 (PostgreSQL)
# ====================================================
POSTGRES_DB=lifebit_db
POSTGRES_USER=lifebit_user
POSTGRES_PASSWORD=lifebit_secure_password_123
POSTGRES_PORT=5432

# ====================================================
# Redis 설정 (캐싱 및 세션)
# ====================================================
REDIS_PASSWORD=lifebit_redis_secure_pass
REDIS_PORT=6379

# ====================================================
# FastAPI 설정 (AI 서비스)
# ====================================================
# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here
USE_GPT=False

# FastAPI 보안 설정
FASTAPI_SECRET_KEY=your-fastapi-secret-key-here-minimum-32-characters
FASTAPI_PORT=8001

# ====================================================
# Spring Boot 설정 (핵심 API)
# ====================================================
# Spring 프로파일
SPRING_PROFILES_ACTIVE=docker

# JWT 설정
JWT_SECRET=your-jwt-secret-key-here-minimum-256-bits-required
JWT_EXPIRATION=86400000

# Spring Boot 포트
SPRING_PORT=8080

# ====================================================
# 프론트엔드 설정 (React + Vite)
# ====================================================
FRONTEND_PORT=3000
API_BASE_URL=http://localhost

# ====================================================
# Airflow 설정 (데이터 파이프라인)
# ====================================================
# Airflow 보안 키 (32자 이상)
AIRFLOW_FERNET_KEY=your-fernet-key-here-must-be-32-characters-exactly
AIRFLOW_SECRET_KEY=your-airflow-secret-key-here

# Airflow 관리자 계정
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin_secure_password
AIRFLOW_ADMIN_EMAIL=admin@lifebit.com
AIRFLOW_PORT=8081

# ====================================================
# Nginx 프록시 설정
# ====================================================
HTTP_PORT=80
HTTPS_PORT=443
NGINX_HOST=localhost
NGINX_PORT=80

# ====================================================
# CORS 설정
# ====================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# ====================================================
# 로깅 설정
# ====================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ====================================================
# 모니터링 설정 (Prometheus & Grafana)
# ====================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_secure_password

# ====================================================
# 소셜 로그인 설정
# ====================================================
# 카카오 로그인
KAKAO_CLIENT_ID=your-kakao-client-id-here
KAKAO_CLIENT_SECRET=your-kakao-client-secret-here
KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback

# 구글 로그인
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ====================================================
# 파일 저장 경로 설정
# ====================================================
DATA_PATH=./data
LOGS_PATH=./logs
UPLOADS_PATH=./uploads

# ====================================================
# SSL/TLS 설정 (HTTPS 사용 시)
# ====================================================
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ====================================================
# 백업 설정
# ====================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=lifebit-backups
BACKUP_S3_REGION=kr-standard

# ====================================================
# 알림 설정
# ====================================================
# Slack 웹훅 (옵션)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 이메일 설정 (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@lifebit.com

# ====================================================
# 외부 서비스 API 키
# ====================================================
# 네이버 클라우드 플랫폼
NCP_ACCESS_KEY=your-ncp-access-key-here
NCP_SECRET_KEY=your-ncp-secret-key-here

# AWS (S3 등 사용 시)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=ap-northeast-2

# ====================================================
# 개발 도구 설정
# ====================================================
# 개발 모드 (개발 시에만 true)
DEBUG=false
DEVELOPMENT_MODE=false

# 핫 리로드 활성화 (개발 시에만 true)
HOT_RELOAD=false

# 테스트 데이터베이스
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_db

# ====================================================
# 성능 및 리소스 설정
# ====================================================
# 메모리 제한 (MB)
POSTGRES_MAX_MEMORY=512
REDIS_MAX_MEMORY=256
FASTAPI_MAX_MEMORY=1024
SPRING_MAX_MEMORY=1536

# 연결 풀 설정
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# 워커 프로세스 수
FASTAPI_WORKERS=4
SPRING_THREAD_POOL=100

# ====================================================
# 보안 설정
# ====================================================
# 세션 타임아웃 (분)
SESSION_TIMEOUT=30

# 비밀번호 정책
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# 보안 헤더
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# ====================================================
# 환경별 설정 예시
# ====================================================

# 개발 환경 (development)
# ENVIRONMENT=dev
# DEBUG=true
# LOG_LEVEL=DEBUG
# SSL_ENABLED=false

# 스테이징 환경 (staging)
# ENVIRONMENT=staging
# DEBUG=false
# LOG_LEVEL=INFO
# SSL_ENABLED=true

# 프로덕션 환경 (production)
# ENVIRONMENT=prod
# DEBUG=false
# LOG_LEVEL=WARN
# SSL_ENABLED=true
# SECURITY_HEADERS_ENABLED=true

# ====================================================
# 추가 설정 (선택사항)
# ====================================================
# CDN 설정
CDN_ENABLED=false
CDN_URL=https://cdn.lifebit.com

# 애널리틱스
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# 메트릭 수집
METRICS_ENABLED=true
METRICS_PORT=9100

# 상태 확인 경로
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics 